<%=image_tag @product.image_url %>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Url:</strong>
  <%= @product.url %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <strong>Price History:</strong>
  <% @product.pricehistories.each do |price_history| %>
    <%= "#{price_history.date} #{price_history.price}" %>
    <br>
  <% end %>
</p>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
