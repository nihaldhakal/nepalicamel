
<div class="row" style="background-color: rgba(204, 209, 210, 0.23); padding: 20px ">
  <div class="col-sm-6">
    <p>
      <strong>Product Name:</strong>
      <h1>
        <%= @product.name %>
      </h1>
    </p>
    <hr>
    <p>
      <strong>Product Url:</strong>
      <h4>
        <%= @product.url %>
      </h4>
    </p>
  </div>
  <div class="col-sm-6">
    <%= image_tag @product.image_url, size: 200, class: 'pull-right product-image' %>
  </div>
</div>

<hr>

<canvas id="myChart" width="200" height="200"> </canvas>
<script>
    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ["Red", "Red"],
            datasets: [{
                label: '# of Votes',
                data: [12,3,10,4,40],
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
</script>

<%= link_to 'Back', products_path %>
